{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RecipeApp": {
    "ImageContainerId": "RecipeImages",
    "EnableAuthentication": false,
    "EnableSeeding": false
  },
  "KeyVault": {
    "Enabled": false,
    "VaultUri": "https://<VAULT_NAME>.vault.azure.net/"
  },
  "Authentication": {
    "EntraId": {
      "Enabled": false,
      "TenantId": "<TENANT_ID>",
      "Authority": "https://login.microsoftonline.com/<TENANT_ID>",
      "ClientId": "<CLIENT_ID>",
      "ClientSecret": "",
      "CallbackPath": "/signin-oidc",
      "SignedOutCallbackPath": "/signout-callback-oidc"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=localhost;Database=RecipeDb;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;"
  },
  "BlobStorage": {
    "Containers": {
      "RecipeImages": {
        "StoreType": "Filesystem",
        "Parameters": {
          "RootPath": "/data/recipes/blob",
          "ReadOnly": "false"
        }
      }
    }
  },
  "Database": {
    "SqlServer": {
      "CommandTimeoutSeconds": 30,
      "MaxRetryCount": 10,
      "MaxRetryDelaySeconds": 30
    }
  }
}

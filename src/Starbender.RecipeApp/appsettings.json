{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "KeyVault": {
    "Enabled": true,
    "VaultUri": "https://recipes.vault.azure.net/"
  },
  "RecipeApp": {
    "ImageStoreType": "Filesystem",
    "ImageContainerId": "Recipe-Images",
    "EnableAuthentication": true,
    "EnableSeeding": false
  },
  "Database": {
    "SqlServer": {
      "CommandTimeoutSeconds": 180,
      "MaxRetryCount": 10,
      "MaxRetryDelaySeconds": 30
    }
  },
  "Authentication": {
    "EntraId": {
      "Enabled": true,
      "TenantId": "d53fb6d0-679b-4d0c-a9a0-62d603f2c23f",
      "Authority": "https://login.microsoftonline.com/d53fb6d0-679b-4d0c-a9a0-62d603f2c23f",
      "ClientId": "f2765e9a-c977-4630-86fc-e6780e5e1515",
      "ClientSecret": "",
      "CallbackPath": "/signin-oidc",
      "SignedOutCallbackPath": "/signout-callback-oidc"
    }
  },
  "BlobStorage": {
    "Containers": [
      {
        "StoreType": "Filesystem",
        "ContainerId": "Recipe-Images",
        "Parameters": {
          "RootPath": "/tmp/Recipe-Image-Store",
          "ReadOnly": "false"
        }
      }
    ]
  }
}

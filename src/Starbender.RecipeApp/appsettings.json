{
  "ConnectionStrings": {
    "Default": "Server=localhost\\SQLEXPRESS;Database=RecipeDb;Integrated Security=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RecipeApp": {
    "ImageStoreType": "Filesystem",
    "ImageContainerId": "Recipe-Images"
  },
  "BlobStorage": {
    "Containers": [
      {
        "StoreType": "Filesystem",
        "ContainerId": "Recipe-Images",
        "Parameters": {
          "RootPath": "/tmp/Recipe-Image-Store",
          "ReadOnly": "false"
        }
      },
      {
        "StoreType": "Filesystem",
        "ContainerId": "Generic-Images",
        "Parameters": {
          "RootPath": "/tmp/Generic-Image-Store",
          "ReadOnly": "true"
        }
      }
    ]
  }
}
